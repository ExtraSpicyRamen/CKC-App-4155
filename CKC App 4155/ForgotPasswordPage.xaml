<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CKC_App_4155.ForgotPasswordPage"
             Shell.NavBarIsVisible="False">
    <Grid>
        <StackLayout Margin="20">
            <StackLayout Margin="0,150,0,10">
                <Label TextColor="DarkGreen" FontSize="30" FontFamily="RockWellBold">Cool Kids Campaign</Label>
                <Label FontSize="15" FontFamily="RockWell" >Forgot Password</Label>
            </StackLayout>
            <StackLayout>
                <Grid>
                    <Frame BorderColor="Black" CornerRadius="0"></Frame>
                    <Entry PlaceholderColor="black" Placeholder="Username or Email"></Entry>
                </Grid>
            </StackLayout>
            <Label FontSize="15" FontFamily="RockWell" Margin="0,10,0,0" VerticalTextAlignment="Center">
                Enter your password or email into the textbox. There will be an email sent to your email account to allow you to reset your password.
            </Label>
            <Button Text="Send Email" FontSize="15" BackgroundColor="DarkGreen" Margin="0,15"></Button>
        </StackLayout>
    </Grid>
</ContentPage>