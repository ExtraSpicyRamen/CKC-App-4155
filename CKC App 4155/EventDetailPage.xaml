<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CKC_App_4155.EventDetailPage"
             Title="Event Detail Page">
    <Grid>
        <StackLayout Margin="20">
            <StackLayout Margin="10,20,0,10">
                <Label TextColor="#71c450" FontSize="30" FontFamily="RockWellBold">Survey Results</Label>
            </StackLayout>
            <StackLayout Margin="0,0,0,0" >
                <Label FontSize="20" FontFamily="RockWell" Margin="0,0,0,10" x:Name="eventTitle">Event Title</Label>
                <Label FontSize="20" FontFamily="RockWell" Margin="0,0,0,10" x:Name="eventDetails">Event Details</Label>
                <Label FontSize="20" FontFamily="RockWell" Margin="0,0,0,10" x:Name="eventHost">Event Host</Label>
                <Label FontSize="20" FontFamily="RockWell" Margin="0,0,0,10" x:Name="eventLocation">Event Location</Label>
                
            </StackLayout>
            <Button Text="Back" FontSize="15" BackgroundColor="#71c450" Margin="0,10" Clicked="GoBack"></Button>
        </StackLayout>
    </Grid>
</ContentPage>