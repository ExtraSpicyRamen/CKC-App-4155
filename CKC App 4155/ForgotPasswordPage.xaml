<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:inputLayout="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             x:Class="CKC_App_4155.ForgotPasswordPage"
             Shell.NavBarIsVisible="False">
    <Grid>
        <StackLayout Margin="20">
            <StackLayout Margin="0,150,0,10">
                <Label TextColor="#71c450" FontSize="30" FontFamily="RockWellBold" HorizontalOptions="Center">Cool Kids App</Label>
                <Label FontSize="15" FontFamily="RockWell" FontAttributes="Italic" HorizontalOptions="Center" Padding="10">
                    Forgot your password? We can help!
                </Label>
            </StackLayout>
            <StackLayout>
                <Grid>
                    <inputLayout:SfTextInputLayout ContainerType="Outlined" ContainerBackground="white" Hint="Email" HelperText="Enter the email associated with your account" HorizontalOptions="StartAndExpand" Margin="5" Padding="5">
                        <Entry></Entry>
                    </inputLayout:SfTextInputLayout>
                </Grid>
            </StackLayout>
            <Button Text="Request Password Reset" FontSize="15" BackgroundColor="#71c450" Margin="0,20"></Button>
        </StackLayout>
    </Grid>
</ContentPage>