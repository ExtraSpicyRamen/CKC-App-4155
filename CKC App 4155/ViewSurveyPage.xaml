<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CKC_App_4155.ViewSurveyPage"
             Title="ViewSurveyPage"
             Shell.NavBarIsVisible="False">
    <Grid>
        <StackLayout Margin="20">
            <StackLayout Margin="0,20,0,10">
                <Label TextColor="#71c450" FontSize="30" FontFamily="RockWellBold">Surveys</Label>
            </StackLayout>
            <Frame BackgroundColor="#eeeeee"
                   Padding="5">
                <StackLayout RadioButtonGroup.GroupName="surveyChoices" Margin="10">
                    <Label FontSize="20" FontFamily="RockWell" TextColor="#71c450" Margin="10" x:Name="surTitle">Survey Title</Label>
                    <RadioButton Content="Choice1"/>
                    <RadioButton Content="Choice2"/>
                    <RadioButton Content="Choice3"/>
                    <RadioButton Content="Choice4"/>
                </StackLayout>
            </Frame>
            <Button Text="Submit" FontSize="15" BackgroundColor="#71c450" Margin="0,20"></Button>
            <Button Text="Cancel" FontSize="15" BackgroundColor="#8d87d1" Margin="0,20"></Button>
        </StackLayout>
    </Grid>
</ContentPage>