                <Grid Margin="0,0,0,10">
                    <Label FontSize="15" FontFamily="RockWell" Margin="0,0,0,0">Choice 5 -</Label>
                    <Label FontSize="15" FontFamily="RockWell" Margin="70,0,0,0">0 Votes</Label>
                </Grid>
                <Grid Margin="0,0,0,10">
                    <Label FontSize="15" FontFamily="RockWell" Margin="0,0,0,0">Choice 6 -</Label>
                    <Label FontSize="15" FontFamily="RockWell" Margin="70,0,0,0">0 Votes</Label>
                </Grid>
            </StackLayout>
            <Button Text="Back" FontSize="15" BackgroundColor="DarkGreen" Margin="0,10"></Button>
        </StackLayout>
    </Grid>
</ContentPage>